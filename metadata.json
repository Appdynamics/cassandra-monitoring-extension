{
	"id" : "cassandra-monitoring-extension",
	"description" : "Cassandra Extension",
	"version" : "1.5.7",
	"repoLink" : "https://github.com/Appdynamics/cassandra-monitoring-extension",
	"downloadFilename" : "CassandraMonitor.zip",
	"configs" : [
		{
			"name" : "monitor.xml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/cassandra-monitoring-extension/master/src/main/resources/conf/monitor.xml",
			"args" : [
				{
                    "name" : "execution-style",
                    "displayName" : "Execution Style",
                    "defaultValue" : "periodic",
                    "description" : "The data to be reported from system performance counters periodically.",
                    "isRequired" : false
                },
				{
					"name" : "execution-frequency-in-seconds",
					"displayName" : "Execution Frequency",
					"defaultValue" : "60",
					"description" : "Determines the execution frequency in seconds.",
					"isRequired" : false
				},
				{
					"name" : "execution-timeout-in-seconds",
					"displayName" : "Execution Timeout",
					"defaultValue" : "60",
					"description" : "Determines the execution timeout in seconds.",
					"isRequired" : false
				},
				{
					"name" : "log-prefix",
					"displayName" : "Log Prefix",
					"defaultValue" : "[CassandraAppDExt] ",
					"description" : "Prefix used in logs. Helpful in debugging.",
					"isRequired" : true
				}
			]
		},
		{
			"name" : "config.yaml",
			"link" : "https://raw.githubusercontent.com/Appdynamics/cassandra-monitoring-extension/master/src/main/resources/conf/config.yml"
		}
	]

}